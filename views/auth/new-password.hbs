<main>
    <div class="row">

        <div class="col-md-6 offset-3 mt-5" id="main-container">



            <div class="card">
                <div class="card-header text-light bg-dark">
                    <h4 class="text-center" name="datosPersonales">Actualizar Contraseña</h4>
                </div>

                <div class="card-body">

                    <form action="/reset/new-password" method="POST">

                        <input type="hidden" name="_csrf" value="{{csrfToken}}" />


                        <input type="hidden" name="passwordToken" value="{{userPasswordToken}}" />
                        <input type="hidden" name="userId" value="{{userId}}" />

                        <div class="mt-3 mb-3">
                            <label for="password" class="form-label">Contraseña:</label>
                            <input type="password" id="password" class="form-control"
                                placeholder="Escriba su constraseña" name="password" required />
                        </div>

                        <div class="mt-3 mb-3">
                            <label for="confirm-password" class="form-label">Confirmar Contraseña:</label>
                            <input type="password" id="confirm-password" class="form-control"
                                placeholder="Escriba su constraseña" name="confirmPassword" required />
                        </div>


                        <div class="mt-3 mb-3">
                            <button type="submit" class="btn btn-primary float-end" id="btn-sign-in">Cambiar
                                contraseña</button>
                        </div>

                    </form>


                    <a href="/reset" class="btn btn-secondary">Atr&aacute;s</a>

                </div>
            </div>
        </div>
</main>