<main>
    <div class="row">
        <div class="col-md-6">
            <h2 class="m-3">Candidates</h2>
            <hr>
        </div>
        <div class="col-md-6">
            <a href="/admin/add-candidate" class="btn btn-primary m-3 float-end">ADD +</a>
        </div>
    </div>
    <div class="row">
        {{#each candidate as |cand|}}
            <div class="col-md-4">
                <div class="card mt-3">
                    <div class="card-header text-center">
                        <h3>{{cand.name}} {{cand.lastName}}</h3>
                    </div>
                    <div class="card-title m-3">
                        <h5 class="text-dark">{{cand.Position.dataValues.name}}</h5>
                    </div>
                    <div class="card-body">
                        <h5 class="text-dark">{{cand.idParties}}</h5>
                    </div>
                </div>
            </div>
            <input type="hidden" name="candidateId" value="{{cand.id}}">
        {{/each}}
    </div>
</main>