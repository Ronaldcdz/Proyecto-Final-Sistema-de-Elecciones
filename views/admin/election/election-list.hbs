<main>
<div class="row">
    <div class="col-md-12 text-center">
        <h3 class="mt-5">Elections</h3>
        <a href="/admin/add-election" class="btn-add float-end"><i class='bx bxs-add-to-queue'></i></a>
    </div>
</div>
<hr>
<div class="row mt-5">
    {{#if hasElection}}
        {{#each elections as |election|}}
        <div class="col-md-12">
            <div class="accordion" id="accordionElection">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        {{#if election.state}}
                        <i class='float-start text-success bx bxs-circle'></i>
                        {{else}}
                        <i class='float-start text-secondary bx bxs-circle'></i>
                        {{/if}}
                        <h3 class="ms-5 mt-2 me-3">{{election.name}}</h3> <p class="text-secondary mt-4">{{election.date}}</p> <a href="/admin/edit-election/{{election.id}}?editMode=true" class="mt-1 btn-edit-election btn"><i class='bx bx-edit-alt'></i></a>
                    </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionElection">
                    <div class="accordion-body">
                        <!--Body Election-->

                        <div class="row">
                            <div class="mb-3">
                                {{#if election.state}}
                                    <a href="#" class="btn btn-add-votesC float-end">New +</a>
                                {{/if}}
                            </div>
                            <div class="col-md-12">
                                <div class="card-votes card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="text-center mt-2 col-md-2">
                                                <img id="img-votes" src="../../../images/5a2c42bf-eb5f-4484-a234-d71470dffa7b-Leonel_Fernandez.jpeg" alt="">
                                                <p class="text-center"><strong>President</strong></p>
                                            </div>
                                            <div class="col-md-10">
                                                <div class="row mt-3">
                                                    <div class="col-md-12">
                                                                <div class="row mt-3">
                                                                    <div class="col-md-6">
                                                                        <p><strong>Leonel Fernandez</strong></p>
                                                                    </div>
                                                                    <div class="col-md-6">
                                                                        <p class="float-end me-3"><strong>PRSC</strong></p>
                                                                    </div>
                                                                </div>
                                                                <hr>
                                                                <div class="progress">
                                                                    <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                                                </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    {{else}}
        <h2 class="text-center mt-5">Sorry, there are no electoral elections</h2>
    {{/if}}
</div>
</main>