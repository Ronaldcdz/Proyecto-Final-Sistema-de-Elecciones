<div class="row">

    <div class="col-md-6 offset-3 mt-5" id="main-container">



        <div class="card">
            <div class="card-header text-light bg-dark">
                <h4 class="text-center" name="datosPersonales">{{#if editMode}}Editar Partido Pol&iacute;tico{{else}}Agregar Partido Pol&iacute;tico{{/if}}</h4>
            </div>

            <div class="card-body">

                <form action="{{#if editMode}}/admin/elective-position/edit-elective-position{{else}}/admin/elective-position/add-elective-position{{/if}}" method="POST">

                    <div class="mt-3 mb-3"> 
                        <label for="name" class="form-label">Nombre del Partido Pol&iacute;tico:</label>
                        <input type="text" id="name"  class="form-control" maxlength="200"
                            placeholder="Escriba el nombre del partido electivo" value="{{#if editMode}}{{party.name}}{{/if}}" name="name" required/ >
                    </div>

                    <div class="mt-3 mb-3">
                        <label for="description" class="form-label">Descripci&oacute;n:</label>
                        <input type="text" id="description" class="form-control" maxlength="200"
                            placeholder="Escriba el obetivo de este Partido Politico" value="{{#if editMode}}{{party.description}}{{/if}}" name="description" required/>
                    </div>


                    {{#if editMode}}

                        <input type="hidden" value="{{party.id}}" name="electivePositionId"/>

                    {{/if}}

                    </div>
                    <div class="mt-3 mb-3">
                        <button type="submit" class="btn btn-success float-end"
                            id="btn-send">{{#if editMode}}Guardar{{else}}Agregar{{/if}}</button>
                    </div>
                </form>

            </div>
        </div>








    </div>