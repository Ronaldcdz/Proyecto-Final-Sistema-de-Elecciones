<main>

    <div class="container-fluid">


        <h3 class="mt-5 mb-3 text-center">Listado de Puestos Electivos</h3>

        <a href="/admin/elective-position/add-elective-position" class="btn btn-primary col-md-2 offset-5 mb-5">Agregar
            un Puesto Electivo</a>


        {{#if hasElectivePositions}}

        {{#each electivePositions as |electivePosition|}}


        <div class="col-md-4">
            <div class="card {{#if electivePosition.state}} {{else}}card-disabled{{/if}}">
                <div class="card-body">
                    <h5 class="card-title fs-3 font-bold">{{electivePosition.name}}</h5>
                    <p class="card-text font-medium">{{electivePosition.description}}</p>
                    <p class="card-text font-medium">Estado: {{#if electivePosition.state}}Activo{{else}}Inactivo{{/if}}
                    </p>


                    <div class="d-flex mx-0 float-end">
                        <a href="/admin/elective-position/edit-elective-position/{{electivePosition.id}}?editMode=true" class="btn btn-primary ">Editar</a>

                        <form action="/admin/elective-position/delete-elective-position" method="post" class="mx-2">

                            <input type="hidden" value="{{this.id}}" name="electivePositionId">
                            <button type="submit"
                                class="btn btn-danger float-middle">Borrar</button>
                        </form>
                    </div>
                </div>
            </div>


            {{/each}}


            {{else}}

            <h5 class="text-center mt-5 mb-5">No existen Puestos Electivos Agregados</h3>


                {{/if}}


        </div>

</main>